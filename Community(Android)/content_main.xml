<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <Button
        android:text="Use My Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myLocation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE"
        android:id="@+id/zipCode"
        android:layout_below="@+id/myLocation"
        android:layout_alignLeft="@+id/myLocation"
        android:layout_alignStart="@+id/myLocation"
        android:layout_alignRight="@+id/myLocation"
        android:layout_alignEnd="@+id/myLocation" />

    <TextView
        android:text="--OR--"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orText"
        android:layout_below="@+id/zipCode"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerOne"
        android:layout_below="@+id/orText"
        android:layout_alignLeft="@+id/zipCode"
        android:layout_alignStart="@+id/zipCode"
        android:layout_alignRight="@+id/myLocation"
        android:layout_alignEnd="@+id/myLocation">
    </Spinner>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/goCity"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:layout_below="@+id/goCity"/>


</RelativeLayout>
